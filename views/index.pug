extends layout

block content
  .container.mt-5
    h1 Job Listings
    // Display job listings in a Bootstrap grid layout
    if jobs && jobs.length > 0
      each job in jobs
        .card.mb-3
          .card-body
            h5.card-title #{job.title}
            p #{job.description}
            a.btn.btn-primary(href=`/course-details/${job.id}`) View Details
    else
      p No jobs found.

    h1 Course Suggestions
    // Display course suggestions similarly
    if courses && courses.length > 0
      each course in courses
        .card.mb-3
          .card-body
            h5.card-title #{course.title}
            p #{course.description}
            a.btn.btn-success(href=`/course-details/${course.id}`) View Details
    else
      p No courses found.
